<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" media="screen">
  </head>
  <body>
		<div class="panel panel-default container" style="width: 50%;">
			<div class="panel-heading">
				<a class="btn btn-info" href="/users/add">添加</a>
				<form class="navbar-form navbar-right" style="margin-top: 1px;" role="from" action="/users/search" method="post">
					<div class="form-group">
						<input type="text" class="form-control" name="search_string" value="<%= datas.string %>" placeholder="请输入关键词" required />
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary">查询</button>
					</div>
				</form>
			</div>
			<div class="panel-body">
				<div>
					<table class="table table-striped table-hover" style="margin: 0 auto;border-top: 1px solid black;border-bottom: 1px solid black;">
						<thead>
							<tr>
								<th>编号</th>
								<th>姓名</th>
								<th>年龄</th>
								<th>部门</th>
								<th>联系方式</th>
								<th>操作</th>
							</tr>
						</thead>
						<tbody>
						<% for(var i = 0; i < datas.length; i++) { %>
							<tr>
								<td><%= i+1 %></td>
								<td><%= datas[i].name %></td>
								<td><%= datas[i].age %></td>
								<td><%= datas[i].department %></td>
								<td><%= datas[i].phone %></td>
								<td>
									<a href="/users/toUpdate/<%= datas[i].id %>">修改</a>&nbsp;
									<a href="/users/del/<%= datas[i].id %>">删除</a>
								</td>
							</tr>
						<% } %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	<script src="/javascripts/jquery.min.js"></script>
	<script src="/javascripts/bootstrap.min.js"></script>
  </body>
</html>
